<?xml version="1.0" encoding="utf-8"?>
<resources>
    <!-- Transaction Detail Styles -->
    <style name="DetailRecipientName">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">32sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailAmount">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">42sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="DetailDateTime">
        <item name="android:textColor">@color/detail_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="DetailSectionTitle">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">24sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimelineItemTitle">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TimelineItemTime">
        <item name="android:textColor">@color/detail_text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="TransferDetailsTitle">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">20sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BreakdownLink">
        <item name="android:textColor">@color/detail_text_secondary</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="RetryButton">
        <item name="android:textColor">@color/retry_button_text</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BalanceLabel">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="BalanceSubtext">
        <item name="android:textColor">@color/detail_text_secondary</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="BalanceAmount">
        <item name="android:textColor">@color/detail_text_primary</item>
        <item name="android:textSize">18sp</item>
        <item name="android:textStyle">bold</item>
    </style>
</resources>
