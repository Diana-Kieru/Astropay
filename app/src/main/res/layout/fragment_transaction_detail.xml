<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2424"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Transaction Icon -->
        <RelativeLayout
            android:id="@+id/headerSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#1A2D2B"
            android:paddingBottom="32dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <!-- Transaction Icon -->
            <LinearLayout
                android:id="@+id/transactionIcon"
                android:layout_width="80dp"
                android:layout_height="80dp"
                android:layout_marginStart="32dp"
                android:layout_marginTop="32dp"
                android:background="@drawable/transaction_icon_bg"
                android:gravity="center">

                <ImageView
                    android:layout_width="36dp"
                    android:layout_height="36dp"
                    android:src="@drawable/ic_arrow_down_transaction"
                    app:tint="#FFFFFF" />
            </LinearLayout>

            <!-- Recipient Name -->
            <TextView
                android:id="@+id/tvRecipientName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/transactionIcon"
                android:layout_marginStart="32dp"
                android:layout_marginTop="24dp"
                android:text="Mauricio Jose Puello Estrada"
                android:textColor="#FFFFFF"
                android:textSize="20sp" />

            <!-- Amount -->
            <TextView
                android:id="@+id/tvAmount"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvRecipientName"
                android:layout_marginStart="32dp"
                android:layout_marginTop="8dp"
                android:text="+10.00 USD"
                android:textColor="#FFFFFF"
                android:textSize="28sp"
                android:textStyle="bold" />

            <!-- Date and Time -->
            <TextView
                android:id="@+id/tvDateTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/tvAmount"
                android:layout_marginStart="32dp"
                android:layout_marginTop="4dp"
                android:text="17 Aug 2025, 17:54"
                android:textColor="#6B7C7C"
                android:textSize="16sp" />
        </RelativeLayout>

        <!-- Timeline Section -->
        <LinearLayout
            android:id="@+id/timelineSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="8dp"
            android:paddingHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/headerSection">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timeline"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginBottom="4dp" />

            <!-- Timeline Items Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Timeline Item 1 - Transaction Created -->
                <include
                    layout="@layout/item_timeline"
                    android:id="@+id/timeline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Timeline Item 2 - Processing -->
                <include
                    layout="@layout/item_timeline"
                    android:id="@+id/timeline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Timeline Item 3 - On the way -->
                <include
                    layout="@layout/item_timeline"
                    android:id="@+id/timeline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Timeline Item 4 - Completed (Last item without connecting line) -->
                <LinearLayout
                    android:id="@+id/timeline4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Timeline Indicator Column -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <!-- Success Icon -->
                        <androidx.cardview.widget.CardView
                            android:id="@+id/timelineIndicator"
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#00D9C5"
                            app:cardElevation="0dp">

                            <ImageView
                                android:id="@+id/ivTimelineIcon"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_check"
                                android:padding="10dp"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>

                        <!-- No connecting line for the last item -->

                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:paddingBottom="24dp">

                        <TextView
                            android:id="@+id/tvTimelineTitle"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold"
                            android:text="The money was sent to the recipient" />

                        <TextView
                            android:id="@+id/tvTimelineTime"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textColor="#7A8A8A"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp"
                            android:text="11/07/2025, 14:52" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Payment Details Section -->
        <LinearLayout
            android:id="@+id/paymentDetailsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/timelineSection">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Payment details"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnSeeBreakdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See breakdown >"
                    android:textColor="#7A8A8A"
                    android:textSize="16sp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Currency Balance Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:paddingVertical="8dp">

                <!-- Kenya Flag Icon -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_kenya_flag"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KES"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="balance"
                        android:textColor="#7A8A8A"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvBalanceAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-34,606.34 KES"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

        <!-- General Details Section -->
        <LinearLayout
            android:id="@+id/generalDetailsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/paymentDetailsSection">

            <!-- Header -->
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="General details"
                android:textColor="#FFFFFF"
                android:textSize="20sp"
                android:textStyle="bold" />

            <!-- Details Items -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="24dp">

                <!-- Payout ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Payout ID"
                        android:textColor="#7A8A8A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvPayoutId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="19406100"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Status -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Status"
                        android:textColor="#7A8A8A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvStatusCompleted"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Completed"
                        android:textColor="#9ACD32"
                        android:textSize="15sp"
                        android:textStyle="bold"
                        android:background="@drawable/bg_status_completed"
                        android:paddingStart="20dp"
                        android:paddingEnd="20dp"
                        android:paddingTop="8dp"
                        android:paddingBottom="8dp" />
                </LinearLayout>

                <!-- Sent to -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Sent to"
                        android:textColor="#7A8A8A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvSentTo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Brian Musyoka"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Account information -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Account information"
                        android:textColor="#7A8A8A"
                        android:textSize="16sp" />

                    <TextView
                        android:id="@+id/tvAccountInfo"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="254700342519"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />
                </LinearLayout>

                <!-- Reference ID -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:gravity="center_vertical"
                    android:paddingVertical="12dp">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="wrap_content"
                        android:layout_weight="1"
                        android:text="Reference ID"
                        android:textColor="#7A8A8A"
                        android:textSize="16sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:gravity="center_vertical">

                        <TextView
                            android:id="@+id/tvReferenceId"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="0000000019406100"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <ImageView
                            android:id="@+id/btnCopyReference"
                            android:layout_width="24dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="8dp"
                            android:src="@drawable/ic_copy"
                            android:padding="4dp"
                            android:background="?attr/selectableItemBackgroundBorderless"
                            android:contentDescription="Copy Reference ID"
                            app:tint="#7A8A8A" />
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

        <!-- View Receipt Button -->
        <TextView
            android:id="@+id/btnViewReceipt"
            android:layout_width="match_parent"
            android:layout_height="56dp"
            android:layout_marginTop="32dp"
            android:layout_marginHorizontal="32dp"
            android:layout_marginBottom="24dp"
            android:text="View Receipt"
            android:textColor="#FFFFFF"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textAllCaps="false"
            android:background="@drawable/bg_button_primary"
            android:gravity="center"
            android:clickable="true"
            android:focusable="true"
            android:stateListAnimator="@null"
            app:layout_constraintTop_toBottomOf="@id/generalDetailsSection"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintBottom_toBottomOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>