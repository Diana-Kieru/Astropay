<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#1A2424"
    android:fillViewport="true">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="24dp">

        <!-- Back Button -->
        <ImageView
            android:id="@+id/btnBack"
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_margin="16dp"
            android:src="@drawable/ic_arrow_back"
            android:padding="12dp"
            android:background="?attr/selectableItemBackgroundBorderless"
            android:contentDescription="Back"
            app:tint="#FFFFFF"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Transaction Icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/transactionIcon"
            android:layout_width="88dp"
            android:layout_height="88dp"
            android:layout_marginTop="32dp"
            app:cardCornerRadius="44dp"
            app:cardBackgroundColor="#2A3A3A"
            app:cardElevation="0dp"
            app:layout_constraintTop_toBottomOf="@id/btnBack"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <ImageView
                android:id="@+id/ivTransactionIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_arrow_up"
                android:padding="24dp"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <!-- Recipient Name -->
        <TextView
            android:id="@+id/tvRecipientName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Natalia Sharova"
            android:textColor="#FFFFFF"
            android:textSize="32sp"
            android:textStyle="bold"
            android:layout_marginTop="24dp"
            android:layout_marginHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/transactionIcon"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Amount -->
        <TextView
            android:id="@+id/tvAmount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="-1.00 GBP"
            android:textColor="#FFFFFF"
            android:textSize="42sp"
            android:textStyle="bold"
            android:layout_marginTop="16dp"
            app:layout_constraintTop_toBottomOf="@id/tvRecipientName"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Date and Time -->
        <TextView
            android:id="@+id/tvDateTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5 Oct 2025, 17:16"
            android:textColor="#7A8A8A"
            android:textSize="16sp"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@id/tvAmount"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

        <!-- Timeline Section -->
        <LinearLayout
            android:id="@+id/timelineSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="48dp"
            android:paddingHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/tvDateTime">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Timeline"
                android:textColor="#FFFFFF"
                android:textSize="24sp"
                android:textStyle="bold"
                android:layout_marginBottom="24dp" />

            <!-- Timeline Items Container -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Timeline Item 1 - Success -->
                <include
                    layout="@layout/item_timeline"
                    android:id="@+id/timeline1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Timeline Item 2 - Success -->
                <include
                    layout="@layout/item_timeline"
                    android:id="@+id/timeline2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Timeline Item 3 - Success -->
                <include
                    layout="@layout/item_timeline"
                    android:id="@+id/timeline3"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

                <!-- Timeline Item 4 - Failed -->
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                    <!-- Timeline Indicator Column -->
                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:orientation="vertical"
                        android:gravity="center_horizontal">

                        <!-- Failed Icon -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="40dp"
                            android:layout_height="40dp"
                            app:cardCornerRadius="20dp"
                            app:cardBackgroundColor="#E74C3C"
                            app:cardElevation="0dp">

                            <ImageView
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"
                                android:src="@drawable/ic_close"
                                android:padding="10dp"
                                app:tint="#FFFFFF" />
                        </androidx.cardview.widget.CardView>

                    </LinearLayout>

                    <!-- Content -->
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        android:layout_marginStart="16dp"
                        android:paddingBottom="24dp">

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Your transfer failed and the money returned to your wallet"
                            android:textColor="#FFFFFF"
                            android:textSize="16sp"
                            android:textStyle="bold" />

                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="05/10/2025, 17:16"
                            android:textColor="#7A8A8A"
                            android:textSize="14sp"
                            android:layout_marginTop="4dp" />

                        <!-- Retry Button -->
                        <androidx.cardview.widget.CardView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="16dp"
                            app:cardCornerRadius="8dp"
                            app:cardBackgroundColor="#00D9C5"
                            app:cardElevation="0dp">

                            <TextView
                                android:id="@+id/btnRetry"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:text="Retry"
                                android:textColor="#1A2424"
                                android:textSize="16sp"
                                android:textStyle="bold"
                                android:paddingHorizontal="32dp"
                                android:paddingVertical="12dp"
                                android:clickable="true"
                                android:focusable="true"
                                android:background="?attr/selectableItemBackground" />
                        </androidx.cardview.widget.CardView>
                    </LinearLayout>
                </LinearLayout>

            </LinearLayout>
        </LinearLayout>

        <!-- Transfer Details Section -->
        <LinearLayout
            android:id="@+id/transferDetailsSection"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginTop="32dp"
            android:paddingHorizontal="32dp"
            app:layout_constraintTop_toBottomOf="@id/timelineSection">

            <!-- Header -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical">

                <TextView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:text="Transfer details"
                    android:textColor="#FFFFFF"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/btnSeeBreakdown"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="See breakdown"
                    android:textColor="#7A8A8A"
                    android:textSize="16sp"
                    android:drawableEnd="@drawable/ic_chevron_right"
                    android:drawablePadding="4dp"
                    android:clickable="true"
                    android:focusable="true"
                    android:background="?attr/selectableItemBackground"
                    android:padding="8dp" />
            </LinearLayout>

            <!-- Currency Balance Item -->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:gravity="center_vertical"
                android:layout_marginTop="24dp"
                android:paddingVertical="8dp">

                <!-- Kenya Flag Icon -->
                <ImageView
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    android:src="@drawable/ic_kenya_flag"
                    android:scaleType="centerCrop" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical"
                    android:layout_marginStart="16dp">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="KES"
                        android:textColor="#FFFFFF"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="balance"
                        android:textColor="#7A8A8A"
                        android:textSize="14sp"
                        android:layout_marginTop="2dp" />
                </LinearLayout>

                <TextView
                    android:id="@+id/tvBalanceAmount"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="-177.02 KES"
                    android:textColor="#FFFFFF"
                    android:textSize="18sp"
                    android:textStyle="bold" />
            </LinearLayout>

        </LinearLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>
</ScrollView>