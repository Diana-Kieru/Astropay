<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">

    <!-- Timeline Indicator Column -->
    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:gravity="center_horizontal">

        <!-- Success Icon -->
        <androidx.cardview.widget.CardView
            android:id="@+id/timelineIndicator"
            android:layout_width="40dp"
            android:layout_height="40dp"
            app:cardCornerRadius="20dp"
            app:cardBackgroundColor="#00D9C5"
            app:cardElevation="0dp">

            <ImageView
                android:id="@+id/ivTimelineIcon"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:src="@drawable/ic_check"
                android:padding="10dp"
                app:tint="#FFFFFF" />
        </androidx.cardview.widget.CardView>

        <!-- Connecting Line -->
        <View
            android:id="@+id/timelineLine"
            android:layout_width="2dp"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:minHeight="60dp"
            android:background="#00D9C5" />
    </LinearLayout>

    <!-- Content -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_marginStart="16dp"
        android:paddingBottom="24dp">

        <TextView
            android:id="@+id/tvTimelineTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            android:textStyle="bold"
            tools:text="Transaction created" />

        <TextView
            android:id="@+id/tvTimelineTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#7A8A8A"
            android:textSize="14sp"
            android:layout_marginTop="4dp"
            tools:text="05/10/2025, 17:16" />
    </LinearLayout>
</LinearLayout>
