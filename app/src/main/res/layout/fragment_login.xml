<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#0A1F1F"
    android:orientation="vertical"
    android:padding="6dp">

    <!-- Enter your PIN Title -->
    <TextView
        android:id="@+id/tvTitle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="60dp"
        android:text="Enter your PIN"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:textStyle="bold" />

    <!-- PIN Input Field with Password Toggle -->
    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/tilPinInput"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/pin_input_background"
        app:boxBackgroundMode="none"
        app:passwordToggleEnabled="true"
        app:passwordToggleTint="#FFFFFF">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/etPinInput"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:gravity="center_vertical"
            android:inputType="numberPassword"
            android:maxLength="4"
            android:paddingStart="20dp"
            android:paddingEnd="20dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp" />

    </com.google.android.material.textfield.TextInputLayout>

    <!-- Large Spacer -->
    <View
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <!-- Forgot your PIN? -->
    <TextView
        android:id="@+id/tvForgotPin"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:text="Forgot your PIN?"
        android:textColor="#00D9A5"
        android:textSize="14sp"
        android:textStyle="bold" />

    <!-- Continue Button -->
    <com.google.android.material.button.MaterialButton
        android:id="@+id/btnContinue"
        android:layout_width="match_parent"
        android:layout_height="50dp"
      android:layout_margin="16dp"
        android:background="@drawable/continue_button_background"
        android:enabled="false"
        android:text="Continue"
        android:textAllCaps="false"
        android:textColor="#5A6B6B"
        android:textSize="18sp"
        app:backgroundTint="@null"
        app:cornerRadius="12dp"
        app:strokeWidth="0dp" />

    <!-- Number Pad -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp"
        android:orientation="vertical">

        <!-- Row 1: 1, 2, 3 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/btn1"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="1"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btn2"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="2"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btn3"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="3"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Row 2: 4, 5, 6 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/btn4"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="4"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btn5"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="5"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btn6"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="6"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Row 3: 7, 8, 9 -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <TextView
                android:id="@+id/btn7"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="7"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btn8"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="8"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <TextView
                android:id="@+id/btn9"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="9"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />
        </LinearLayout>

        <!-- Row 4: Biometric, 0, Backspace -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="3">

            <ImageView
                android:id="@+id/btnBiometric"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:padding="22dp"
                android:src="@drawable/ic_fingerprint"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#00D9A5" />

            <TextView
                android:id="@+id/btn0"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="0"
                android:textColor="#FFFFFF"
                android:textSize="30sp"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless" />

            <ImageView
                android:id="@+id/btnBackspace"
                android:layout_width="0dp"
                android:layout_height="75dp"
                android:layout_weight="1"
                android:padding="22dp"
                android:src="@drawable/ic_backspace"
                android:clickable="true"
                android:focusable="true"
                android:background="?attr/selectableItemBackgroundBorderless"
                app:tint="#FFFFFF" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>